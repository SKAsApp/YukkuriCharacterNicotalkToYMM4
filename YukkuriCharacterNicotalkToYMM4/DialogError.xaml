<ContentDialog
	x:Class="YukkuriCharacterNicotalkToYMM4.DialogError"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:YukkuriCharacterNicotalkToYMM4"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="⚠️エラー"
	CloseButtonText="👍了解"
	FontFamily="Yu Gothic" FontWeight="Medium" FontSize="16">
	<ContentDialog.Resources>
		<ResourceDictionary>
			<ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary Source="ThemeDark.xaml" x:Key="Dark"/>
				<ResourceDictionary Source="ThemeLight.xaml" x:Key="Light"/>
			</ResourceDictionary.ThemeDictionaries>
		</ResourceDictionary>
	</ContentDialog.Resources>

	<Grid>
		<TextBlock x:Name="ErrorMessage" TextAlignment="Justify" TextWrapping="Wrap" FontFamily="Yu Gothic" FontWeight="Medium" FontSize="16" Foreground="{ThemeResource SKAforeground}" SelectionHighlightColor="{ThemeResource SKAtextboxSelect}" IsTextSelectionEnabled="True">
			エラーメッセージ
		</TextBlock>
	</Grid>
</ContentDialog>
